# aliases
alias clip='xsel --clipboard'
alias ls='ls --color=auto -h'
alias ll='ls --color=auto -h'

if type nvim > /dev/null; then
    alias vim=nvim
fi

if type bat > /dev/null; then
    alias cat='bat -pp'
fi

# file type aliases
alias -s txt=vim
alias -s md=vim
alias -s json=vim
alias -s yaml=vim
alias -s yml=vim
alias -s ini=vim
alias -s conf=vim
alias -s cfg=vim

alias now='date +"%y%m%d%H%M%S"'
