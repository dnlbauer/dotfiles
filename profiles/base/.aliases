# aliases
alias clip='xsel --clipboard'
alias ls='ls --color=auto -lh'
alias ll='ls --color=auto -lh'

if type nvim > /dev/null; then
    alias vim=nvim
fi

if type bat > /dev/null; then
    alias cat=bat
fi

# file type aliases
alias -s txt=vim
alias -s md=vim
alias -s json=vim
alias -s yaml=vim
alias -s yml=vim
alias -s ini=vim
alias -s conf=vim
alias -s cfg=vim

alias now='date +"%y%m%d%H%M%S"'
